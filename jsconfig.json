{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // 절대 경로
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/PerformanceInfo.jsx"
  ],
  "exclude": ["node_modules", "**/node_modules", "dist"]
}
